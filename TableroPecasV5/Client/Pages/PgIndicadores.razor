<div style="padding-left: 25px; width: 100%; bottom: 0px; height: calc(100vh - 74px); overflow: auto; display: block; box-sizing: inherit;">
  @foreach (CDatoIndicador Indicador in ListaIndicadores)
  {
    <div>
      <span class="fa fa-pie-chart" />
      <p style="display: inline-block; margin-left: 5px; width: 400px; font-size: 12px; cursor: pointer;" @onclick="@(e => @Navegar(Indicador.Codigo))">@Indicador.Descripcion</p>
    </div>
  }
</div>

@code{
  private void Navegar(Int32 Codigo)
  {
    //    NavigationManager.NavigateTo("JSInterop");
    NavigationManager.NavigateTo("DetalleIndicador/" + Codigo.ToString(), false);
  }
}

