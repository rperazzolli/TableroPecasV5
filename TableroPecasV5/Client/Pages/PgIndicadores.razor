<div style="margin: 0px; height: 50px">
  <div class="form" style="margin: 10px 25px 10px 25px; height: 25px;">
    <div style="display: inline-block; font-size: 12px; position: absolute; float: left;">
      <label for="uname" style="margin-left: 25px;"><b>Filtro</b></label>
      <input type="text" style="margin-left: 10px; display: inline-block; width: 199px; height: 20px;"
             placeholder="Ingrese el filtro" name="uname" required @bind-value="@Filtro" />
      <button class="vertical-center" style="padding: 5px 0px 0px 0px; margin-left: 20px; width: 25px;" @onclick="@FiltrarIndicadores">
        <span class="oi oi-reload" />
      </button>
    </div>
  </div>
</div>

@*<div style="width: 700px; height: 400px;">
