@inherits Logicas.CLogicaCfgProvWFS
@using TableroPecasV5.Shared;  

<div style="width: 100%; height: 100%; background-color: whitesmoke; font-size: 10px;">

  <div style="width: calc(100% - 15px); height: 100%; display: inline-block; margin-left: 15px;">

    <div style="width: calc(50% - 5px); height: 100%; display: inline-block; vertical-align: top;">
      <div style="width: calc(100% - 10px); height: calc(100% - 10px); display: inline-block;
               margin: 5px; background-color: white; border-color: gray; border-width: 1px;
               overflow-y: auto; overflow-x: hidden;">
        @if (Proveedores != null)
			{
        foreach (CProveedorWFSCN Proveedor in Proveedores)
				{
          <p style="cursor: pointer;" @onclick="((e) => { PosicionarProveedor(Proveedor); })">@Proveedor.Descripcion</p>
				}
			}
      </div>
    </div>

    <div style="width: 50%; height: 100%; display: inline-block;">

      <div style="width: 100%; height: calc(100% - 45px); display: inline-block;">
     
        <div style="height: 20px;"/>

        <div style="width: 100%; height: calc(100% - 20px); display: inline-block;">

          <div style="width: 80px; height: 100%; display: inline-block; text-align: right; vertical-align: top;">
            <p style="height: 25px; margin: 6px;">Nombre</p>
            <p style="height: 25px; margin: 2px;">URL</p>
            <p style="height: 25px; margin: 2px;">F.A.</p>
          </div>

          <div style="width: calc(100% - 90px); height: 100%; display: inline-block;">
            <div style="display: table;">
              <input type="text" style="height: 25px; margin: 2px;" @bind-value="@Descripcion" />
              <input type="text" style="height: 25px; margin: 2px;" @bind-value="@URL" />
              <input type="text" style="height: 25px; margin: 2px;" @bind-value="@FA" />
            </div>

            <div style="width: 80px; display: table; text-align: center;">
              <p />
              <button style="width: 120px; height: 25px;">Editar capas</button>
              <p />
              <button style="width: 150px; height: 25px;">Validar proveedor</button>
            </div>

          </div>

        </div>

        <div style="width: calc(100% - 10px); height: 30px; display: block; text-align: right;">
          <button style="display: inline-block; width: 75px; height: 25px;" >Registrar</button>
          <button style="display: inline-block; width: 50px; height: 25px;" >Cerrar</button>
        </div>
      </div>
    </div>
  </div>
</div>
