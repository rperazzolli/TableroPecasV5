@using TableroPecasV5.Shared;
@using TableroPecasV5.Client.Componentes; 
@using TableroPecasV5.Client.Logicas
@inherits CLogicaReferencias

<div style="width: 100%; height: 100%; overflow: hidden; background-color: white; position: absolute;">
  <div style="background: #007DFF; height: 25px; width: calc(100% - 10px); text-align: left; margin: 5px; position: absolute;">
    <div style="width: 100%; height: 100%; position: absolute;" @onmousedown="@EventoMouseAbajo">
      <label style="vertical-align: central; margin-left: 5px; font-size: 15px; color: white; position: absolute;">Referencias</label>
    </div>
  </div>

  <div class="row" style="width: 100%; height: calc(100% - 70px); position: relative; margin-top: 30px; margin-left: 0px; overflow-x: hidden; overflow-y: auto; padding: 4px; overflow-x: hidden; overflow-y: auto;">
    <div style="width: 100%; height: 100%; padding: 2px; margin-left: 5px; border-color: gray; border-width: 1px;">
      @if (ListaElementos != null)
      {
        @foreach (CLineaValorColor Elemento in ListaElementos)
        {
          <div style="display: flex; height: 28px; width: 100%; padding: 0px;" @onclick="((e) => { SeleccionarElemento(Elemento); })">
            <div style="@EstiloLinea(Elemento)"></div>
            <label style="@EstiloBlock">@Elemento.Texto</label>
          </div>
        }
      }
    </div>
  </div>

  <div style="background: #007DFF; height: 25px; width: calc(100% - 10px); text-align: center; margin: 5px; position: absolute; display: inline;">
    <img style="width: 21px; height: 21px;" src="Imagenes/mas.png" @onclick="@Incrementar" />
    <img style="width: 21px; height: 21px; margin-left: 2px;" src="Imagenes/menos.png" @onclick="@Reducir" />
  </div>

  @if (ListaElementos == null)
  {
    <CTextoAguarda />
  }
</div>
