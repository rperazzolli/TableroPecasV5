@using TableroPecasV5.Shared;
@using TableroPecasV5.Client.Listas;
@inherits Logicas.CLogicaVinculadorCoordenadas

<div style="width: 100%; left: 0%; top: 0%; height: 100%; overflow: hidden; background-color: rgba(128,128,128,0.3); position: absolute; z-index: 99;">
  <div style="width: 80%; left: 10%; top: 10%; height: 60%; position: absolute; background-color: white; border-bottom-color: darkgray; border-width: 2px; border-style: solid;">
    <div style="background: #007DFF; height: 25px; width: calc(100% - 10px); text-align: left; margin: 5px; position: absolute;">
      <div style="width: 100%; height: 100%; position: absolute;">
        <label style="vertical-align: central; margin-left: 5px; font-size: 15px; color: white; position: absolute;">Georeferenciación de vínculos</label>
        <div style="width: 25px; height: 25px; color: white; position: absolute; margin-left: calc(100% - 25px); margin-top: 0px; text-align: center; vertical-align: central; font-size: 15px; cursor: pointer;" @onclick="@Cerrar">X</div>
      </div>
    </div>

    <div class="row" style="width: 100%; height: calc(100% - 90px); position: relative; margin-top: 30px; margin-left: 0px; overflow-x: hidden; overflow-y: auto; padding: 4px;">
      <div style="width: calc(50% - 5px); height: 100%; padding: 2px; margin-left: 5px; border-color: gray; border-width: 1px; display: inline-block;">
        @if (ListaElementos != null)
        {
          @foreach (CListaPosicion Elemento in ListaElementos)
          {
            <div style="@EstiloLinea(Elemento)" @onclick="((e) => { SeleccionarVinculo(Elemento); })">
              <label>@Elemento.Descripcion</label>
            </div>
          }
        }
      </div>

      <div id="@Direccion" style="width: calc(50% - 5px); height: 100%; background: white; display: inline-block;">
        @*ondragover="event.preventDefault();" @ondrop="RecibirDrop">*@

      </div>
    </div>
    @if (ListaElementos != null)
    {
      <div style="width: 100%; height: 40px; text-align: right;">
        <button style="width: 80px; height: 28px; align-content: center; vertical-align: middle;" @onclick="@Registrar">Listo</button>
      </div>
    }
    else
    {
      <div style="width: 100%; height: 100%; position: absolute; top: 0px; left: 0px;">
        <CAguardar/>
      </div>
    }
  </div>
</div>
